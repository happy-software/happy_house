<p id="notice"><%= notice %></p>

<p>
  <strong>Start date:</strong>
  <%= @lease.start_date&.to_s(:long) %>
</p>

<p>
  <strong>End date:</strong>
  <%= @lease.end_date&.to_s(:long) %>
</p>

<p>
  <strong>Amount:</strong>
  $<%= @lease.amount.to_f.round(2) %> <%= @lease&.lease_frequency&.frequency %>
</p>

<p>
  <strong>Attached document:</strong>
  <%= link_to @lease.property_document&.document&.filename, @lease.property_document&.document %>
</p>

<p>
  <strong>Expiration Status:</strong>
  <%= @lease.expiration_status&.to_s&.titleize %>
</p>

<%= link_to 'Edit', edit_lease_path(@lease) %> |
<%= link_to 'Back', leases_path %>
