

<div class="modal fade bd-example-modal-lg" id="uploadDocumentModal" tabindex="-1" role="dialog" aria-labelledby="uploadDocumentModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Add a Document</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>

      <div class="modal-body">
        <%= form_with(model: @property, url: { action: :upload_files }) do |form| %>
        <% #= form_tag upload_property_documents_path(@property) do |form| %>
          <div class="custom-file mb-sm-2">
            <% #= file_field_tag :documents, multiple: true, class: 'custom-file-input' %>
            <%= form.file_field :documents, multiple: true, required: true %>
          </div>

          <%= submit_tag 'Upload File(s)' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
