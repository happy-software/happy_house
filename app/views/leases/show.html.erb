<p id="notice"><%= notice %></p>

<p>
  <strong>Start date:</strong>
  <%= @lease.start_date&.to_s(:long) %>
</p>

<p>
  <strong>End date:</strong>
  <%= @lease.end_date&.to_s(:long) %>
</p>

<p>
  <strong>Amount:</strong>
  $<%= @lease.amount.to_f.round(2) %> <%= @lease&.lease_frequency&.frequency %>
</p>

<p>
  <strong>Attached document:</strong>
  <% if @lease.contract.attached? %>
    <%= link_to @lease.contract.blob.filename, url_for(@lease.contract) %>
  <% end %>
</p>

<p>
  <strong>Expiration Status:</strong>
  <%= @lease.expiration_status&.to_s&.titleize %>
</p>

<h2>Tenants</h2>

<table class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
    </tr>
  </thead>

  <tbody>
    <% if @lease.tenants.count.positive? %>
      <% @lease.tenants.each do |tenant| %>
        <tr>
          <td><%= tenant.name %></td>
          <td><%= tenant.email %></td>
          <td><%= tenant.phone_number %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_property_lease_path(@property, @lease) %> |
<%= link_to 'Back', property_leases_path %>
