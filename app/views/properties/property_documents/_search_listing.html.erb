
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Search Documents</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>

      <div class="modal-body">

        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Search... (coming soon)" aria-label="Recipient's username" aria-describedby="button-addon2">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
          </div>
        </div>

        <table class="table table-striped table-hover table-bordered">
          <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Size</th>
              <th scope="col">Uploaded Date</th>
            </tr>
          </thead>
          <tbody>
            <% @property.property_documents.each_with_index do |document_record, index| %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><a href="<%= url_for document_record.document %>"><%= document_record.name %></a></td>
                <td>-</td>
                <td><%= document_record.created_at %></td>
              </tr>

            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
