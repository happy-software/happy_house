<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        Your Happy Homes
      </h1>

      <div>

        <% if @properties.count.zero? %>
          <h1><p><%= link_to 'Add your first property!', new_property_url, class: 'btn btn-primary' %></p></h1>
        <% else %>

          <% @user.properties.sort_by(&:created_at).each_with_index do |property, index| %>
            <div class="tile">
              <h1>
                <%= link_to property.display_name, property_path(property)%>
              </h1>
            </div>
          <% end %>

          <div>
            <%= link_to 'Add another property', new_property_url, class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>

    </section>
  </aside>
</div>
