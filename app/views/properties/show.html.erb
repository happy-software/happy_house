<% provide(:title, @property.address['street_address']) %>

<h1><%= @property.display_name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p><%= link_to 'Update Property', edit_property_path(@property)%></p>
    <div class="property_details">
      <%= render 'properties/property_details', property: @property %>
    </div>

    <div class="property_documents">
      <%= render partial: 'properties/property_documents/existing_document', collection: @property.property_documents %>
    </div>
  </div>
</div>
