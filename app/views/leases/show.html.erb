<p id="notice"><%= notice %></p>

<h2>Lease Details</h2>

<table class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Start</th>
      <th scope="col">End</th>
      <th scope="col">Rent Amount</th>
      <th scope="col">Contract Document</th>
      <th scope="col">Lease Status</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td scope="col"><%= @lease.start_date&.to_s(:long) %></td>
      <td scope="col"><%= @lease.end_date&.to_s(:long) %></td>
      <td scope="col">$<%= @lease.amount.to_f.round(2) %> <%= @lease&.lease_frequency&.frequency %></td>
      <td scope="col"><%= link_to @lease.property_document&.document&.filename, @lease.property_document&.document %></td>
      <td scope="col"><%= @lease.expiration_status&.to_s&.titleize %></td>
    </tr>
  </tbody>
</table>

<h2>Tenants</h2>

<table class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
    </tr>
  </thead>

  <tbody>
    <% if @lease.tenants.count.positive? %>
      <% @lease.tenants.each do |tenant| %>
        <tr>
          <td><%= tenant.name %></td>
          <td><%= tenant.email %></td>
          <td><%= tenant.phone_number %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_lease_path(@lease) %> |
<%= link_to 'Back', leases_path %>
