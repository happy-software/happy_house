<% provide(:title, @property.display_name) %>

<div class="row">
  <aside class="col-md-12">
    <section class="user_info">
      <h1>
        Yearly Home Owner's Association (HOA) Payments (beta)
      </h1>

      <%= form_with do %>
        <div class=""
        <%= label_tag(:monthly_payment, "Monthly HOA Amount: $") %>
        <%= text_field_tag(:monthly_payment) %>

        <%= label_tag(:year, "Year (yyyy): ") %>
        <%= text_field_tag(:year) %>

        <%= submit_tag("Add Yearly HOA Expenses") %>
      <% end %>
    </section>
  </aside>
</div>
