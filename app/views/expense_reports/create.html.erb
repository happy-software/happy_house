<% provide(:title, "Expense Reports | #{@year}") %>

<div class="row">
  <aside class="col-sm-6 col-sm-offset-2">
    <section class="year_picker">
      <h1>Expense Report - <%= @year %></h1>

      <h3>Total Cost: <%= @expense_report[:total_cost] %></h3>
      <div>
        <table style="width: 100%" class="table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Cost</th>
          </tr>
        </thead>

        <tbody>
          <% @expense_report[:expenses].sort_by { |e| e[:date] }.each do |e| %>
            <tr>
              <td style="padding-left: 2px"><%= e[:name] %></td>
              <td style="padding-left: 2px"> <%= e[:date].strftime('%m/%d/%Y') %></td>
              <td style="padding-left: 2px"><%= number_to_currency(e[:cost]) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </section>
  </aside>
</div>
